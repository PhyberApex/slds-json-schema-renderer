{
  "name": "slds-json-schema-renderer",
  "type": "module",
  "version": "1.5.30",
  "description": "A CLI tool to generate documentation from JSON schema files",
  "author": "PhyberApex",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/PhyberApex/slds-json-schema-renderer"
  },
  "keywords": [
    "json-schema",
    "documentation",
    "cli",
    "static-site-generator",
    "vue",
    "slds"
  ],
  "main": "lib/index.js",
  "bin": {
    "slds-json-schema-renderer": "./bin/cli.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin/",
    "lib/",
    "src/templates/"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node ./bin/cli.js",
    "clean": "rimraf lib",
    "build:cli": "babel src --out-dir lib --copy-files --ignore 'src/frontend/**' --config-file ./babel.config.json",
    "dev": "npm run mock-data && vite",
    "mock-data": "node prepareMockData.js",
    "build:frontend": "vite build",
    "build": "npm run clean && npm run build:cli && npm run build:frontend",
    "prepublishOnly": "npm run build",
    "pages": "npm run build && npm run start -- generate -i ./test/ -o docs",
    "semantic-release": "semantic-release",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "15.2.2",
    "@salesforce-ux/design-system": "2.29.0",
    "ajv": "8.18.0",
    "chalk": "5.6.2",
    "commander": "13.1.0",
    "fs-extra": "11.3.3",
    "glob": "13.0.3",
    "motion-v": "1.10.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.4.3",
    "@babel/cli": "7.28.6",
    "@babel/core": "7.29.0",
    "@babel/preset-env": "7.29.0",
    "@eslint/js": "10.0.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.6",
    "@semantic-release/npm": "13.1.4",
    "@vitejs/plugin-vue": "6.0.4",
    "@vue/eslint-config-prettier": "10.2.0",
    "css-loader": "7.1.4",
    "eslint": "10.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "rimraf": "6.1.2",
    "semantic-release": "25.0.3",
    "style-loader": "4.0.0",
    "vite": "7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0",
    "vite-plugin-vue-devtools": "8.0.6",
    "vue": "3.5.28"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,vue,yml}": [
      "eslint --fix"
    ]
  }
}
