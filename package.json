{
  "name": "slds-json-schema-renderer",
  "version": "1.0.4",
  "description": "A CLI tool to generate documentation from JSON schema files",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "json-schema-docs": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "lib/",
    "src/templates/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node ./bin/cli.js",
    "clean": "rimraf lib",
    "build:cli": "babel src --out-dir lib --copy-files --ignore 'src/frontend/**' --config-file ./babel.config.json",
    "dev": "vite",
    "build:frontend": "vite build",
    "build": "npm run clean && npm run build:cli && npm run build:frontend",
    "prepublishOnly": "npm run build",
    "pages": "npm run build && npm run start -- generate -i ./test/ -o docs",
    "semantic-release": "semantic-release",
    "lint": "eslint \"src/**/*.{js,vue}\" --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "json-schema",
    "documentation",
    "cli",
    "static-site-generator",
    "vue",
    "slds"
  ],
  "author": "PhyberApex",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "12.0.1",
    "@salesforce-ux/design-system": "2.26.2",
    "ajv": "8.17.1",
    "chalk": "5.4.1",
    "commander": "13.1.0",
    "fs-extra": "11.3.0",
    "glob": "11.0.1",
    "shx": "0.4.0"
  },
  "devDependencies": {
    "@babel/cli": "7.27.0",
    "@babel/core": "7.26.10",
    "@babel/preset-env": "7.26.9",
    "@eslint/js": "9.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "12.0.1",
    "@vitejs/plugin-vue": "5.2.3",
    "@vue/eslint-config-prettier": "10.2.0",
    "css-loader": "7.1.2",
    "eslint": "9.24.0",
    "eslint-plugin-n": "17.17.0",
    "eslint-plugin-vue": "10.0.0",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.3",
    "style-loader": "4.0.0",
    "vite": "6.2.6",
    "vite-plugin-vue-devtools": "7.7.2",
    "vue": "3.5.13"
  },
  "engines": {
    "node": ">=18"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
